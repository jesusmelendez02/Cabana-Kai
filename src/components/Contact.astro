---
import ContactCard from "../components/ui/ContactCard.astro";
import location from "../assets/icons/location-alt.svg";
import instagram from "../assets/icons/instagram.svg";
import phone from "../assets/icons/phone.svg";
import email from "../assets/icons/email.svg";
---

<section
  id="contact"
  aria-labelledby="contact-title"
  class="py-16 px-4 bg-goldenSun animate-fade-up animate-scale animate-duration-500 animate-once"
>
  <div class="max-w-3xl mx-auto">
    <h2 class="sr-only">Contact Information</h2>

    <p
      class="font-heading text-center text-[2.5rem]/13 tracking-wider mb-10 animate-fade-up animate-delay-100 animate-once"
    >
      Letâ€™s plan your beach day
    </p>

    <ul
      role="list"
      class="grid md:grid-cols-2 gap-5 animate-fade-up animate-delay-200 animate-once"
    >
      <ContactCard
        icon={location.src}
        alt="Location icon"
        label="Location"
        value="Sarasota & Anna Maria"
        className="animate-fade-up animate-scale animate-delay-300 animate-once"
      />

      <ContactCard
        icon={instagram.src}
        alt="Instagram icon"
        label="Instagram"
        value="@cabana.kai"
        href="https://instagram.com/cabana.kai"
        className="animate-fade-up animate-scale animate-delay-400 animate-once"
      />

      <ContactCard
        icon={phone.src}
        alt="Phone icon"
        label="Call or Text"
        value="(321) 947-4253"
        href="tel:13219474253"
        className="animate-fade-up animate-scale animate-delay-500 animate-once"
      />

      <ContactCard
        icon={email.src}
        alt="Email icon"
        label="Email"
        value="relax@cabanakairentals.com"
        href="mailto:relax@cabanakairentals.com"
        className="animate-fade-up animate-scale animate-delay-600 animate-once"
      />
    </ul>

    <div class="mt-10 text-center">
      <a
        href="https://instagram.com/cabana.kai"
        target="_blank"
        rel="noopener"
        class="inline-block w-full px-6 py-5 rounded-3xl text-center font-accent font-bold uppercase text-base bg-seafoamMint text-deepNavy hover:bg-oceanBlue hover:text-linenWhite transition-colors duration-300 shadow-md hover:shadow-lg animate-fade-up animate-delay-700 animate-once"
      >
        Book your beach day on Instagram
      </a>

      <p
        class="text-sm italic mt-2 font-semibold text-deepNavy animate-fade-up animate-delay-800 animate-once"
      >
        We respond quickly! Reach out by text, DM, or email, whatever works for
        you.
      </p>
    </div>
  </div>
</section>

<div
  class="bg-[url(../assets/images/cabana-sunset-side-backlit.jpg)] imageDivider mt-0"
>
</div>
