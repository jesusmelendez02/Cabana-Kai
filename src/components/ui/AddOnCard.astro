---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

export interface Props {
  icon: string | ImageMetadata;
  alt?: string;
  name: string;
  price: string;
}

const { icon, alt = "", name, price } = Astro.props;
const isAstroImage = typeof icon !== "string";
---

<article
  class="group flex flex-col gap-5 bg-softSand p-8 rounded-2xl shadow-card md:flex-row md:gap-10 md:items-center transition-all duration-200 ease-in-out hover:-translate-y-2 hover:shadow-lg hover:bg-[#ffe9d2]"
>
  {
    isAstroImage ? (
      <Image
        src={icon as ImageMetadata}
        alt={alt}
        width={32}
        height={32}
        class="w-8 h-8 mt-1 shrink-0 transition-transform duration-200 group-hover:scale-110"
      />
    ) : (
      <img
        src={icon as string}
        alt={alt}
        class="w-8 h-8 mt-1 shrink-0 transition-transform duration-200 group-hover:scale-110"
      />
    )
  }

  <div
    class="flex flex-col gap-5 font-accent text-lg tracking-wider md:flex-row md:justify-between md:basis-full md:text-x md:h-lh"
  >
    <p class="text-coconutShell uppercase">{name}</p>
    <span
      class="text-deepNavy font-bold md:ms-10 transition-all duration-200 group-hover:font-semibold group-hover:text-[#13215A]"
    >
      {price}
    </span>
  </div>
</article>
