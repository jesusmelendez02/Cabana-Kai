---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

export interface Props {
  icon: string | ImageMetadata;
  alt?: string;
  name: string;
  price: string;
}

const { icon, alt = "", name, price } = Astro.props;
const isAstroImage = typeof icon !== "string";
---

<article
  class="flex flex-col gap-5 bg-softSand p-8 rounded-2xl shadow-card md:flex-row md:gap-10 md:items-center hover:bg-sandyBeige transition-colors"
>
  {
    isAstroImage ? (
      <Image
        src={icon as ImageMetadata}
        alt={alt}
        width={32}
        height={32}
        class="w-8 h-8 mt-1 shrink-0"
      />
    ) : (
      <img src={icon as string} alt={alt} class="w-8 h-8 mt-1 shrink-0" />
    )
  }

  <div
    class="flex flex-col gap-5 font-accent text-lg tracking-wider md:flex-row md:justify-between md:basis-full md:text-x md:h-lh"
  >
    <p class="text-coconutShell uppercase">{name}</p>
    <span class="text-deepNavy font-bold md:ms-10">{price}</span>
  </div>
</article>
