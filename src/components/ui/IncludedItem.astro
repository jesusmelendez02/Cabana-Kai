---
import { Image } from "astro:assets";

export interface Props {
  icon: any;
  alt: string;
  label: string;
  className: string;
}
const { icon, alt, label } = Astro.props;
---

<li class={`flex items-center gap-3 ${Astro.props.className ?? ""}`}>
  <Image src={icon} alt={alt} class="w-6 h-6 shrink-0" loading="lazy" />
  <span class="text-coconutShell text-lg/tight">{label}</span>
</li>
