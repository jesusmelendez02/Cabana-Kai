---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

export interface Props {
  icon: ImageMetadata;
  alt: string;
  title: string;
  bullets: string[];
  className?: string;
}

const { icon, alt, title, bullets, className = "" } = Astro.props;
---

<article
  class={`bg-softSand rounded-3xl p-8 shadow-card md:max-w-md transform transition duration-200 hover:scale-[1.025] hover:shadow-lg active:scale-[1.015] ${className}`}
  role="listitem"
>
  <div class="mb-5 w-8">
    <Image src={icon} alt={alt} width={32} height={32} class="aspect-square" />
  </div>
  <h3 class="mb-2">{title}</h3>
  <ul class="list-disc list-inside text-base text-coconutShell">
    {bullets.map((item) => <li>{item}</li>)}
  </ul>
</article>
