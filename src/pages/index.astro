---
import "../styles/global.css";
import Hero from "../components/Hero.astro";
import HowItWorks from "../components/HowItWorks.astro";
import Packages from "../components/Packages.astro";
import Included from "../components/Included.astro";
import AddOns from "../components/AddOns.astro";
import AboutUs from "../components/AboutUs.astro";
import Policies from "../components/Policies.astro";
import Contact from "../components/Contact.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Primary Meta Tags -->
    <title>
      Cabana Kai — Luxury Cabana & Umbrella Rentals | Sarasota & Anna Maria
    </title>
    <meta
      name="title"
      content="Cabana Kai — Luxury Cabana & Umbrella Rentals in Florida"
    />
    <meta
      name="description"
      content="Luxury beach setups for families, couples, and groups in Sarasota & Anna Maria. We set up, you show up. Cabanas, umbrellas, add-ons & more."
    />
    <meta
      name="keywords"
      content="cabana rentals Sarasota, umbrella rentals, beach setup Florida, Anna Maria beach cabana, family beach setup, luxury beach rental"
    />
    <meta name="author" content="Cabana Kai" />

    
    <!-- Standard Favicons -->
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

    <!-- Android/Manifest Support -->
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-192x192.png">

  </head>
  <body>
    <Hero />
    <HowItWorks />
    <Packages />
    <Included />
    <AddOns />
    <AboutUs />
    <Policies />
    <Contact />
    <script
      defer
      src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js"
    ></script>
  </body>
</html>
