---
import "../styles/global.css";
import Hero from "../components/Hero.astro";
import HowItWorks from "../components/HowItWorks.astro";
import Packages from "../components/Packages.astro";
import Included from "../components/Included.astro";
import AddOns from "../components/AddOns.astro";
import AboutUs from "../components/AboutUs.astro";
import Policies from "../components/Policies.astro";
import Contact from "../components/Contact.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Primary Meta Tags -->
    <title>
      Cabana Kai — Luxury Cabana & Umbrella Rentals | Sarasota & Anna Maria
    </title>
    <meta
      name="title"
      content="Cabana Kai — Luxury Cabana & Umbrella Rentals in Florida"
    />
    <meta
      name="description"
      content="Luxury beach setups for families, couples, and groups in Sarasota & Anna Maria. We set up, you show up. Cabanas, umbrellas, add-ons & more."
    />
    <meta
      name="keywords"
      content="cabana rentals Sarasota, umbrella rentals, beach setup Florida, Anna Maria beach cabana, family beach setup, luxury beach rental"
    />
    <meta name="author" content="Cabana Kai" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.cabanakai.com/" />
    <meta
      property="og:title"
      content="Cabana Kai — Luxury Beach Rentals in Sarasota & Anna Maria"
    />
    <meta
      property="og:description"
      content="Show up. Relax. We handle everything. Rent premium cabanas, umbrellas, and add-ons for the perfect beach day."
    />
    <meta
      property="og:image"
      content="https://www.cabanakai.com/og-image.jpg"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://www.cabanakai.com/" />
    <meta
      property="twitter:title"
      content="Cabana Kai — Luxury Beach Rentals in Sarasota & Anna Maria"
    />
    <meta
      property="twitter:description"
      content="Luxury beach setups in Florida. Couples, families, and group-friendly. Easy online booking."
    />
    <meta
      property="twitter:image"
      content="https://www.cabanakai.com/og-image.jpg"
    />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Fonts (SK Moralist or fallback) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />

    <!-- TODO: replace with SK Moralist self-hosted load if implemented -->
  </head>
  <body>
    <Hero />
    <HowItWorks />
    <Packages />
    <Included />
    <AddOns />
    <AboutUs />
    <Policies />
    <Contact />
  </body>
</html>
